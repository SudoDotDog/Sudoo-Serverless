{
	"compileOnSave": false,
	"compilerOptions": {
		"alwaysStrict": true,
		"downlevelIteration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es2017"
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*.ts"
	]
}